<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN//EN" "http://www.springframework.org/dtd/spring-beans.dtd">
<!--  Seed data beans have to be declared from the smallest part to the largest composite object
	Every bean is expected to have a @Entity and @Id
 -->
 <beans>

	<bean id="roleUser" class="org.trails.security.domain.Role" lazy-init="true">
		<property name="name"><value>ROLE_USER</value></property>
		<property name="description"><value>User role</value></property>
	</bean>
	
	
	<bean id="roleAdmin" class="org.trails.security.domain.Role" lazy-init="true">
		<property name="name"><value>ROLE_MANAGER</value></property>
		<property name="description"><value>Manager role</value></property>
	</bean>

	<bean id="admin" class="org.trails.security.domain.User" lazy-init="true">
		<property name="username"><value>admin</value></property>
		<property name="password"><value>admin</value></property>
		<property name="confirmPassword"><value>admin</value></property>
		<property name="firstName"><value>Admin</value></property>
		<property name="lastName"><value>Admin</value></property>
		<property name="enabled"><value>true</value></property>
		<property name="accountNonLocked"><value>true</value></property>
		<property name="accountNonExpired"><value>true</value></property>
		<property name="credentialsNonExpired"><value>true</value></property>
		<property name="roles">
			<list>
				<ref bean="roleUser"/>
				<ref bean="roleAdmin"/>
			</list>
		</property>
	</bean>

	<bean id="user" class="org.trails.security.domain.User" lazy-init="true">
		<property name="username"><value>user</value></property>
		<property name="password"><value>user</value></property>
		<property name="confirmPassword"><value>user</value></property>
		<property name="firstName"><value>Foo</value></property>
		<property name="lastName"><value>Bar</value></property>
		<property name="enabled"><value>true</value></property>
		<property name="accountNonLocked"><value>true</value></property>
		<property name="accountNonExpired"><value>true</value></property>
		<property name="credentialsNonExpired"><value>true</value></property>
		<property name="roles">
			<list>
				<ref bean="roleUser"/>
			</list>
		</property>
	</bean>
	
	<bean id="foo" class="org.trails.test.Foo" lazy-init="true">
		<property name="id"><value>1</value></property>
		<property name="name"><value>seed foo</value></property>
	</bean>
</beans>
