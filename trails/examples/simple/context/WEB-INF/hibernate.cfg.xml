<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC "-//Hibernate/Hibernate Configuration DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
	<session-factory>
		<mapping class="org.trails.demo.Person" />
		<mapping class="org.trails.demo.Thing2" />
		<mapping class="org.trails.demo.Product" />
		<mapping class="org.trails.demo.TreeNode" />
		<mapping class="org.trails.demo.Item" />
		<mapping class="org.trails.demo.Car" />
		<mapping class="org.trails.demo.Make" />
		<mapping class="org.trails.demo.Fruit" />
		<mapping class="org.trails.demo.Catalog" />
		<mapping class="org.trails.demo.Model" />
		<mapping class="org.trails.demo.Category" />
		<mapping class="org.trails.demo.Stuff" />
		<mapping class="org.trails.demo.VersionedThing" />
		<mapping class="org.trails.demo.Thing" />
		<mapping class="org.trails.demo.Apple" />
		<mapping class="org.trails.demo.Item2" />
		<listener type="pre-update"
			class="org.hibernate.validator.event.ValidatePreUpdateEventListener" />
		<listener type="merge"
			class="org.trails.validation.ValidateMergeEventListener" />
		<listener type="pre-insert"
			class="org.hibernate.validator.event.ValidatePreInsertEventListener" />
	</session-factory>
</hibernate-configuration>