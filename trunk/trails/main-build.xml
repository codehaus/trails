<?xml version="1.0" encoding="utf-8"?>
<!-- Delegating build script, used by cruisecontrol to build Trails Framework.
     Note that the basedir is set to the checked out project -->
<project name="Trails cruise"
        default="build"
        basedir=".">
    
	<path id="antlibs">
		<fileset dir="${ant.home}/lib">
			<include name="**/*.jar"/>
		</fileset>
	</path>
	
	<target name="build">
    	<taskdef name="svn"
    	 classname="org.tigris.subversion.svnant.SvnTask" classpathref="antlibs"/>        
    	
      	<!-- Get the latest from SVN -->
    	<svn>
    		
    		<checkout url="http://trails.inspiring.nl/svn/branches/trunk" destPath="/data/opensource/cruisecontrol/checkout/trails" />
    		
    		<!--
    		<update file="."/>
    		-->
    	</svn>
    	
        <!-- Call the target that does everything -->
        <ant antfile="build.xml" target="all"/>
    </target>
</project>