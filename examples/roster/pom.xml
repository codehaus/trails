		  </includes>
		</configuration>
	  </plugin>
	  <plugin>
		<groupId>org.codehaus.cargo</groupId>
		<artifactId>cargo-maven2-plugin</artifactId>
		<version>0.2</version>
		<configuration>
		  <wait>false</wait>
		  <container>
			<containerId>tomcat5x</containerId>
			<zipUrlInstaller>
			  <url>http://apache.org/dist/tomcat/tomcat-5/v5.5.23/bin/apache-tomcat-5.5.23.zip</url>
			</zipUrlInstaller>
		  </container>
		</configuration>
