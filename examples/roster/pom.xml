  <name>Trails Example - Classic Hibernate Roster Demo</name>

  <build>

	<plugins>
	  <plugin>
		<artifactId>maven-surefire-plugin</artifactId>
		<executions>
		  <execution>
			<id>surefire-it</id>
			<phase>integration-test</phase>
			<goals>
			  <goal>test</goal>
			</goals>
			<configuration>
			  <includes>
				<include>
				  **/*Test.java
				</include>
			  </includes>
			</configuration>
